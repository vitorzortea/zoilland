header
  display: flex
  align-items: center
  box-shadow: 0px 0px 10px 1px rgba(0,0,0,0.2)
  background-image: linear-gradient(to top, #ada996 0%, #eaeaea 10%, #dbdbdb 20%, #f2f2f2 97%, #ada996 100%)

  #avatar
    width: 70px
    background-color: #ADA996
    line-height: 0
    padding: 5px 5px 5px 10px
    border-radius: 0 50px 50px 0
    margin-right: 10px

    &:hover
      background-color: #ff8500

    img
      border-radius 50%

  h1>img
    width: 200px
    margin-right: 10px

  nav
    flex: auto
    text-align: right

    a
      display: inline-table
      padding-right: 20px
      font-weight: bold
      color: #5D5530

      //&.active, &:hover
      &:hover
        color: #ff8500

      img
        display: inline-table
        vertical-align: middle
        width: 35px
        margin-right: 5px

  &>span
    display: table
    min-width: 120px
    text-align: center
    background: rgba(255, 255, 255, 0.5)
    padding: 5px
    border-radius: 10px
    margin: 10px
    border-right: solid 1px gray
    border-bottom: solid 1px gray

    &>span
      font-size: 0.8em
      font-weight: bold
      color: #ff8500

