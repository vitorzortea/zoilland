section
  width: 100%
  min-height: 100vh
  display: flex

  &>div
    width: 50%
    position: relative

    &>span
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%

  &>div, &>div>span
    background-size: cover
    background-position: center

  main
    width: 50%
    background-image: linear-gradient(to top, #ada996 0%, #eaeaea 10%, #dbdbdb 20%, #f2f2f2 97%, #ada996 100%)
    color: #867867
    box-shadow: 0 0 50px rgb(0 0 0 / 0.3)
    display: flex
    flex-direction: column
    align-items: center
    justify-content: space-between
    position: relative
    z-index: 2
    padding: 20px

    &>h1
      width: 350px
      max-width: 100%
      margin-bottom: 20px

  footer
    text-align: center
    padding-top: 20px
    font-size: 12px

    img
      width: 120px

    a
      font-weight: bold

